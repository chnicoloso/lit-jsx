{
  "name": "@chnicoloso/lit-jsx",
  "version": "0.0.1",
  "description": "A JSX runtime for Lit",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.js",
      "require": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts"
    }
  },
  "author": {
    "name": "Christian Lista Nicoloso <chnicoloso@gmail.com>"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build:dev": "node ./esbuild.mjs",
    "build:release": "node ./esbuild.mjs --dist",
    "prepublishOnly": "npm run build:release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chnicoloso/lit-jsx.git"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "lit": "^2.3.0"
  },
  "devDependencies": {
    "commander": "^12.0.0",
    "esbuild": "^0.20.0",
    "esbuild-plugin-d.ts": "^1.2.3",
    "esbuild-plugin-tsc": "^0.4.0",
    "glob": "^10.3.10",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
