{
    "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    // This enables Typescript to parse JSX.
    "jsx": "react-jsx",
    // This tells Typescript to use litjsx when transforming JSX.
    "jsxImportSource": "litjsx",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    },
}
    